---
import Container from "../shared/Container.astro";
import Title from "../shared/Title.astro";

---

<section>
    <Container className="space-y-8">
        <div class="text-center max-w-3xl mx-auto">
            <Title>
                Testimonios
            </Title>
        </div>
        <div class="flex justify-center flex-wrap gap-12 md:gap-16 lg:gap-20">
             <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/images/t1.png" width="600" height="300" alt="t2" class="h-20 sm:h-17 w-auto ease-linear duration-300 grayscale group-hover:!grayscale-0 group-hover:scale-505">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/images/t2.png" width="600" height="300" alt="t2" class="h-20 sm:h-17 w-auto ease-linear duration-300 grayscale group-hover:!grayscale-0 group-hover:scale-505">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/images/t3.png" width="600" height="300" alt="t2" class="h-20 sm:h-17 w-auto ease-linear duration-300 grayscale group-hover:!grayscale-0 group-hover:scale-505">
            </div>
            <div class="p-4 sm:p-5 rounded-xl bg-body border border-box-border group">
                <img src="/images/t4.png" width="600" height="300" alt="t2" class="h-20 sm:h-17 w-auto ease-linear duration-300 grayscale group-hover:!grayscale-0 group-hover:scale-505">
            </div>
        </div>
    </Container>
</section>