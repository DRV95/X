---
import Container from "../shared/Container.astro";
import Paragraph from "../shared/Paragraph.astro";
import Title from "../shared/Title.astro";

---
{/* SECCIÓN #CONTACT: Modifico py-5 a pt-5 y añado pb-0 */}
<section id="contact" class="pt-5 md:pt-5 pb-0">
    <Container className="flex flex-col midmd:flex-row gap-5 lg:gap-5">
       <div
      class="w-full relative py-5 md:py-7 px-6 md:px-5 rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 dark:to-transparent max-w-xl mx-auto"
    >
        <div class="mx-auto text-center relative">
        <h1
          class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight font-bold text-heading-1"
        >
          Información <span class="text-transparent bg-clip-text bg-gradient-to-br from-yellow-800 from-20% via-amber-800 via-30% to-gray-700">Útil</span> 
        </h1>
        <Paragraph className={"pt-10 text-left"}>
            Dirección: Bulnes 220, Oficina 206<br>
            Teléfono: (43) 2 654 084<br>
            Email: contacto@eliminesusdeudas.cl

        </Paragraph>
      </div>
       </div> {/* Cierre del div de gradiente */}
    </Container>
</section>
{/* SECCIÓN #UBICACION: Modifico py-5 a pb-5 y añado pt-0 */}
<section id="ubicacion" class="pt-0 pb-5 md:pb-5">
    <Container className="flex flex-col midmd:flex-row gap-5 lg:gap-5">
      
        <div class="mt-0 text-center flex-1 flex midmd:w-7/12 lg:w-1/2 flex-col">
            <Title>
               Cómo Llegar a Nuestra Oficina
            </Title>
            <br>
            <div
            
        class="w-full relative pt-3 pb-3 md:pt-3 md:pb-3 px-3 md:px-3 rounded-2xl bg-gradient-to-tr from-gray-100 to-gray-200 dark:from-gray-900 dark:to-transparent max-w-xl mx-auto"
    >
<iframe width="550" height="350" style="border:0;" src="https://maps.google.com/maps?q=Bulnes%20220%2C%20oficina%20206&t=k&z=16&ie=UTF8&iwloc=&output=embed" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
</div>
            
           
    
            </div>
        </div>
    </Container>
</section>